
.image {
  height: 160rpx;
}
.cerent {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.text {
  display: flex;
  align-items: center;
  justify-content: center;
}
.cerent-image {
  margin-top: 200rpx;
}
.describe {
  margin-left: 30rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
}
.a {
  width: 40px;
  height: 40px;
  background-color: #000;
  animation: rotate 20s linear infinite;
}
@keyframes rotate{
  0% {transform:rotate(0deg);}
  50% {transform:rotate(180deg);}
  100% {transform:rotate(360deg);}
}
