
  <view class="background" style="height: {{height}}px; width: {{width}}px">
    <view class="section">
      <textarea bindblur="bindTextAreaBlur" placeholder="描述你的作品..."/>
    </view>
    <view class="photoName">
      <input bindblur="bindTextAreaBlur" placeholder="给你的作品起个名" maxlength="7"/>
    </view>

    <view class="upPhoto">
      <block  wx:for="{{src}}">
        <view>
          <image class="image" mode="scaleToFill" src="{{item}}"/>
        </view>
      </block>
      <view class="button" bindtap="ButtonTap">
      <image class="image-button" src="{{buttonUp}}"/></view>
    </view>
    <view class="up">
      <button bindtap="up">上传</button>
    </view>
  </view>