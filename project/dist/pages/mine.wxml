
  <view class="background" style="height: {{height}}px">
    <view class="">
      <view class="id">
        <view class="userinfo">
          <view class="userinfo-avatar">
            <image class="userinfo-avatar" src="{{ avatarUrl }}"/>
          </view>
          <view class="userinfo-nickname">{{ nickName }}</view>
        </view>
      </view>

      <view class="body">
        <view bindtap="praiseTap" class="praise flex">
          <view class="center">
            <image class="image" src="{{praise}}"/>
            <text class="text">我赞过的</text>
          </view>
        </view>

        <view bindtap="myTap" class="flex">
          <view class="center">
            <image class="image" src="{{my}}"/>
            <text class="text">我的作品</text>
          </view>
        </view>
      </view>

      <view class="body">
        <view bindtap="teasTap" class="praise flex">
          <view class="center">
            <image class="image" src="{{teas}}"/>
            <text class="text">吐槽吐槽</text>
          </view>
        </view>

        <view bindtap="aboutTap" class="flex">
          <view class="center">
            <image class="image" src="{{about}}"/>
            <text class="text">关于我们</text>
          </view>
        </view>
      </view>

    </view>
  </view>